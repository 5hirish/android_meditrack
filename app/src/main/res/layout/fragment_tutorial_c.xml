<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alleviate.meditrack.fragments.TutorialCFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add SOS Contact"
            android:textSize="20sp"
            android:textColor="@color/textPrimary"
            android:layout_above="@+id/contact_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_name"
            android:hint="Contact Name"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="@dimen/dime16"
            android:layout_marginRight="@dimen/dime16"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_number"
            android:hint="Contact Number"
            android:layout_below="@+id/contact_name"
            android:inputType="phone"
            android:maxLength="11"
            android:layout_marginTop="@dimen/dime16"
            android:layout_marginLeft="@dimen/dime16"
            android:layout_marginRight="@dimen/dime16"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add SOS"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:id="@+id/save_sos"
            android:layout_below="@+id/contact_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

    </RelativeLayout>


</FrameLayout>
